<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <EditText
        android:id="@+id/email_edittext_login"
        android:layout_width="347dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_frame"
        android:drawableStart="@drawable/ic_mail_outline_black_24dp"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        app:layout_constraintBottom_toTopOf="@+id/sifre_edittex_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/sifre_edittex_login"
        android:layout_width="347dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_frame"
        android:drawableStart="@drawable/ic_lock"
        android:ems="10"
        android:hint="Şifre"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="@+id/email_edittext_login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_edittext_login"
        app:layout_constraintTop_toBottomOf="@+id/email_edittext_login" />

    <Button
        android:id="@+id/girisyap_button_login"
        android:layout_width="347dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_button"
        android:text="Giriş yap"
        android:textColor="@android:color/white"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/sifre_edittex_login"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sifre_edittex_login"
        app:layout_constraintTop_toBottomOf="@+id/sifre_edittex_login" />

    <TextView
        android:id="@+id/kayit_ol_textview"
        android:layout_width="295dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="25dp"
        android:text="Henüz Kayıt Olmadınız Mı? Kayıt Ol."
        android:textColor="@android:color/background_dark"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/girisyap_button_login"
        app:layout_constraintStart_toStartOf="@+id/girisyap_button_login"
        app:layout_constraintTop_toBottomOf="@+id/girisyap_button_login"
        app:layout_constraintVertical_bias="0.1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="266dp"
        android:layout_height="160dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toTopOf="@id/email_edittext_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/sifremi_unuttum"
        android:layout_width="124dp"
        android:layout_height="27dp"
        android:layout_marginTop="10dp"
        android:text="Şifremi Unuttum"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/kayit_ol_textview"
        app:layout_constraintStart_toStartOf="@+id/kayit_ol_textview"
        app:layout_constraintTop_toBottomOf="@+id/kayit_ol_textview" />


</androidx.constraintlayout.widget.ConstraintLayout>